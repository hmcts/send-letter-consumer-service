#!groovy

@Library("Infrastructure")

def type = "java"
def product = "send-letter"
def component = "consumer"

def channel = '#rpe-build-notices'

List<LinkedHashMap<String, Object>> secrets = [
  secret('test-s2s-name', 'TEST_S2S_NAME'),
  secret('test-s2s-secret', 'TEST_S2S_SECRET'),
  secret('s2s-url', 'S2S_URL'),
  secret('send-letter-producer-url', 'SEND_LETTER_PRODUCER_URL')
]

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [ $class: 'AzureKeyVaultSecret',
    secretType: 'Secret',
    name: secretName,
    version: '',
    envVariable: envVar
  ]
}

withPipeline(type , product, component) {
    after('test') {
      sh './gradlew integration'
    }

    enableSlackNotifications(channel)
    loadVaultSecrets(secrets)
}
